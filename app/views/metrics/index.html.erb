<h1>Listing metrics</h1>

<table>
  <tr>
    <th>Process name</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.process_name %></td>
    <td><%= metric.value %></td>
    <td><%= link_to 'Show', metric %></td>
    <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
    <td><%= link_to 'Destroy', metric, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table> 

<br />

<%= link_to 'New Metric', new_metric_path %>
<hr />

<script type="text/x-handlebars">
  {{view Tass.CreateMetricView id="new-metric" placeholder="The metric"}}
  
  {{#collection contentBinding="Tass.metricsController" tagName="ul" itemClassBinding="content.value"}}
    {{view Em.Checkbox processNameBinding="content.processName"}}
  {{/collection}}
</script>